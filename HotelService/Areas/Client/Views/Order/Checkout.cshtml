@model Order
@{
    ViewData["Title"] = "Order";
    Layout = "~/Areas/Client/_ClientLayout.cshtml";
}


<main class="container">
<div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-8">
            <div class="card px-5">
                <div class="card-body">
                    <div class="row g-5">

                        <div class="col-md-12 col-lg-12">
                            <h4 class="mb-3">Укажите данные</h4>
                            <form class="needs-validation" asp-action="Checkout" method="post">
                                <div class="row g-3">
                                    <div class="col-sm-6">
                                        <label for="firstName" class="form-label">Как к Вам может обращаться работник?</label>
                                        <input type="text" class="form-control" id="firstName" placeholder="" value="" required="" asp-for="Name">
                                        <div class="invalid-feedback">
                                            Valid first name is required.
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label for="lastName" class="form-label">Контактный телефон</label>
                                        <input type="text" class="form-control" id="lastName" placeholder="" value="" required="" asp-for="PhoneNumber">
                                        <div class="invalid-feedback">
                                            Valid last name is required.
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <label for="username" class="form-label">Итого:</label>
                                        <div class="input-group has-validation">
                                            <span class="input-group-text">$</span>
                                            <input type="number" class="form-control" id="username" placeholder="" value="@Model.CostTotal.ToString("C")" required="" aria-disabled="True">
                                            <div class="invalid-feedback">
                                                Your username is required.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <label for="country" class="form-label">Контракт</label>
                                        <select asp-for="RoomContractId" asp-items="ViewBag.SelectContracts" class="form-select">
                                            @*<option value="">None</option>*@
                                        </select>
                                        <div class="invalid-feedback">
                                            Please select a valid country.
                                        </div>
                                    </div>

                                    
                                </div>

                                <hr class="my-4">

                                <div class="row gy-3">
                                    <div class="col-md-6">
                                        <label for="cc-name" class="form-label">Держатель карты:</label>
                                        <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                                        <small class="text-muted">Полное имя, отображенное на лицевой стороне</small>
                                        <div class="invalid-feedback">
                                            Name on card is required
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="cc-number" class="form-label">Номер карты:</label>
                                        <input type="text" class="form-control" id="cc-number" placeholder="" required="" asp-for="CreditCardNumber">
                                        <div class="invalid-feedback">
                                            Credit card number is required
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <label for="cc-expiration" class="form-label">Дата окончания:</label>
                                        <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
                                        <div class="invalid-feedback">
                                            Expiration date required
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <label for="cc-cvv" class="form-label">CVV</label>
                                        <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                                        <div class="invalid-feedback">
                                            Security code required
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4">


                                <button class="w-100 btn btn-primary btn-lg" type="submit">Оформить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="py-5 text-center text-light">
                <img class="d-block mx-auto mb-4" src="~/img/Home/Order Confirmation_Monochromatic.svg" alt="" width="400" height="300">
                <h2>Прочтите перед оформлением</h2>
                <p>Выберите нужный контракт с ГК ниже и мы окажем Вам выбранные услуги прямо в номер.</p>
            </div>
        </div>
    </div>

</main>