
@model HotelService.Models.ViewModels.Client.CatalogModel

@{
    ViewData["Title"] = "Catalog";
    Layout = "~/Areas/Client/_ClientLayout.cshtml";
}
<div class="row row-cols-lg-3 row-cols-md-2 g-4 align-items-center">

        @foreach (var Item in Model.Services.ToList())
        {
        <div class="col-md">
            @await Html.PartialAsync("~/Views/Shared/_ServiceCardPartial.cshtml", Item)
        </div>
        }
    </div>
    
    <div class="row row-cols-lg-3 row-cols-md-1 g-4 mt-3 align-items-center">

        @foreach (var Item in Model.Categories.ToList())
        {
            <div class="col-md">
                @await Html.PartialAsync("~/Views/Shared/_CategoryCardPartial.cshtml", Item)
            </div>
        }
    </div>




