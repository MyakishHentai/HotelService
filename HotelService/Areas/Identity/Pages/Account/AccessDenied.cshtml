@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<header class="container rounded-3 shadow align-content-center bg-light my-5">
    <div class="text-center p-5">
        <div class="text-center">
            <img src="~/img/error.png" class="rounded" alt="Access denied" width="100" height="100">
        </div>
        <h1 class="text-danger">@ViewData["Title"]</h1>
        <p class="text-danger">Вы не имеете прав доступа, чтобы просматривать этот ресурс.</p>
    </div>
</header>
