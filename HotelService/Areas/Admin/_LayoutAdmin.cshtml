@using HotelService.Models.Base
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- NuGet Package Bootstrap5 -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap-5.0.0-beta3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-5.15.3/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/admin.css" rel="stylesheet" />

    <!-- NuGet Package Bootstrap5 -->

    <script defer src="~/lib/bootstrap-5.0.0-beta3/js/bootstrap.min.js"></script>
    <script defer src="~/lib/fontawesome-5.15.3/js/all.min.js"></script>
    <script defer src="~/js/jquery-3.6.0.min.js"></script>
</head>

<body>

    @* Navbar *@
    <partial name="/Views/Shared/_NavbarPartial.cshtml" />

    <div class="container-fluid render sidebar">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Admin <i class="fas fa-unlock"></i></span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle px-0">
                                <i class="fas fa-home fs-5"></i><span class="ms-1 d-none d-sm-inline">Contracts</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="fas fa-address-card fs-5"></i><span class="ms-1 d-none d-sm-inline">Roles <i class="fas fa-angle-down"></i></span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Clients</span> <i class="fas fa-user-friends"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Staff</span> <i class="fas fa-user-tie"></i></a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="nav-link px-0 align-middle">
                                <i class="far fa-bell fs-5"></i><span class="ms-1 d-none d-sm-inline">Orders</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                                <i class="far fa-compass fs-5"></i><span class="ms-1 d-none d-sm-inline">Menu <i class="fas fa-angle-down"></i></span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Categories</span> <i class="fas fa-bars"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Services</span> <i class="fas fa-concierge-bell"></i></a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="nav-link px-0 align-middle">
                                <i class="far fa-comments fs-5"></i> <span class="ms-1 d-none d-sm-inline">Feedback</span>
                            </a>
                        </li>
                    </ul>
                    <hr>


                    <div class="pb-4">
                        <a id="manage" class="btn btn-primary text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile" style="font-size: 1rem;">
                            <i class="fas fa-user-circle"></i>
                            <span class="d-none d-sm-inline mx-1">Profile</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
