@using HotelService.Models.Base
@using Microsoft.AspNetCore.Identity
@using HotelService.Service
@using Microsoft.CodeAnalysis.CSharp.Syntax
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- NuGet Package Bootstrap5 -->
    <link href="~/lib/bootstrap-5.0.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Иконки -->
    <link href="~/lib/fontawesome-5.15.3/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css' rel="stylesheet" type="text/css">
    <!-- Собственные стили -->
    <link href="~/css/default.css" rel="stylesheet" type="text/css">
    <link href="~/css/sidebar.css" rel="stylesheet" type="text/css" />
    <!-- DataTables -->
    <link rel="stylesheet" href="~/css/dataTables.bootstrap5.min.css" />
</head>

<body id="body-pd" style="background: rgb(43,198,204);
                          background: linear-gradient(0deg, rgba(43,198,204,1) 0%, rgba(255,87,254,1) 100%);">
    <header class="header" id="header">

        <div class="header_toggle text-start">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>

        <div class="text-center d-inline-block d-none d-md-inline">
            <a class="navbar-brand text-dark text-end" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo_brand.svg" alt="Logo" width="70" height="50" class="d-inline-block pb-1" />
                @Config.CompanyName
            </a>
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <div class="">
                    <a asp-controller="Home" asp-area="Admin" asp-action="Index" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">@Config.CompanyName</span> </a>
                </div>

                <div class="nav_list">
                    <ul class="nav nav-pills" id="menu">
                        <li>
                            <a asp-area="Admin" asp-controller="Request" asp-action="Index" class="nav_link"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Контракты</span> </a>
                        </li>
                        <li>
                            <a href="#" class="nav_link"> <i class='bx bxs-basket'></i> <span class="nav_name">Заявки</span> </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="ServiceCategory" asp-action="Index" class="nav_link"> <i class='bx bxs-category'></i> <span class="nav_name">Категории</span> </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Service" asp-action="Index" class="nav_link"> <i class='bx bxs-hotel'></i> <span class="nav_name">Сервис</span> </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="nav_link"> <i class='bx bxs-user-account'></i> <span class="nav_name">Пользователи</span> </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="nav_link"> <i class='bx bxs-mask'></i> <span class="nav_name">Роли</span> </a>
                        </li>
                    </ul>
                </div>
            </div>

            <a asp-controller="Home" asp-area="" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">Главная</span> </a>
        </nav>
    </div>

    <!--Container Main start-->

    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>


<!-- NuGet Package Bootstrap5 -->
<script src="~/lib/bootstrap-5.0.1-dist/js/bootstrap.min.js"></script>
    <!-- NuGet Package Bootstrap5 -->
    <script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
    <!-- Иконки -->
    <script src="~/lib/fontawesome-5.15.3/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.2.1/chart.min.js"></script>

    <!-- DataTables & Charts -->
    <script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap5.min.js"></script>

    <!-- Собственные скрипты -->
<script src="~/js/sidebar.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/admin.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
