@model HotelService.Models.Base.ServiceCategory
@{
    ViewData["Title"] = "Add Service";
    Layout = "/Areas/Admin/_AdminLayout.cshtml";
}
<form asp-action="Create" asp-controller="ServiceCategory">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Subtitle" class="control-label">Subtitle</label>
        <input type="text" asp-for="Subtitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Descriprion</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>