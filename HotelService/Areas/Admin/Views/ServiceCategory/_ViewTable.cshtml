@model IEnumerable<HotelService.Models.Base.ServiceCategory>


<div class="card">
    <div class="card-header text-center">
        <span><i class="fas fa-server"></i></span> Categories Table
    </div>
    <div class="card-body">
        <div class="table-responsive p-1">
            <table id="categories_table"
                   class="table table-striped table-hover table-bordered align-middle data-table"
                   style="width: 100%">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Заголовок</th>
                        <th>Подзаголовок</th>
                        <th>Подкатегория</th>
                        <th class="non-orderable">
                            <a onclick="showInPopup('@Url.Action("CreateEdit", "ServiceCategory", null, Context.Request.Scheme)', 'Добавление новой категории')" class="btn btn-success text-white w-100">
                                <i class="fas fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                @if (Model.Any())
                {
                    <tbody>
                        @foreach (var Item in Model)
                        {
                            <tr>
                                <td>@Item.Title</td>
                                <td>@Item.Subtitle</td>
                                <td class="text-center">@(Item.SubCategory?.Title ?? "-")</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a onclick="showInPopup('@Url.Action("CreateEdit", "ServiceCategory", new {id = Item.Id}, Context.Request.Scheme)', 'Обновить @Item.Title')" class="btn btn-warning">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a onclick="showInPopup('@Url.Action("Details", "ServiceCategory", new {id = Item.Id}, Context.Request.Scheme)', 'Детали @Item.Title')" class="btn btn-info ">
                                            <i class="fas fa-question"></i>
                                        </a>
                                    </div>
                                    <a onclick="showInPopup('@Url.Action("Delete", "ServiceCategory", new {id = Item.Id}, Context.Request.Scheme)', 'Удалить @Item.Title')" class="btn-sm btn-outline-danger ">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>