@using System.Xml.Serialization
@using HotelService.Models.Base
@model IEnumerable<HotelService.Models.Base.ServiceCategory>
@{
    ViewBag.Title = "Service";
    Layout = "/Areas/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <div class="text-center">
        <a asp-action="Create" asp-controller="ServiceCategory" class="btn btn-lg btn-primary w-100"><i class="fas fa-plus"></i></a>
    </div>
    

    <hr/>

    <div class="card">
        <div class="card-header">
            <span><i class="fas fa-server"></i></span> Categories Table
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="categories_table"
                       class="table table-striped table-hover table-bordered align-middle data-table p-4"
                       style="width: 100%">
                    <thead class="table-dark text-center">
                    <tr>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Sub</th>
                        <th>Manage</th>
                    </tr>
                    </thead>
                    @if (Model.Any())
                    {
                        <tbody>
                        @foreach (var Item in Model)
                        {
                            <tr>
                                <td>@Item.Title</td>
                                <td>@Item.Subtitle</td>
                                <td class="text-center">@(Item.SubCategory?.Title ?? "-")</td>
                                <td class="text-center">
                                    <div class="btn-group manage-links">
                                        <a asp-controller="ServiceCategory" asp-action="Details" asp-route-id="@Item.CategoryId" class="btn btn-outline-dark">Details</a>
                                        <a asp-controller="ServiceCategory" asp-action="Edit" asp-route-id="@Item.CategoryId" class="btn btn-outline-success">Edit</a>
                                        <a asp-controller="ServiceCategory" asp-action="Delete" asp-route-id="@Item.CategoryId" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                        <tfoot class="table-dark text-center">
                        <tr>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Sub</th>
                            <th>Manage</th>
                        </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


