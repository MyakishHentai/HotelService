@using Microsoft.AspNetCore.Identity
@using HotelService.Models.Base
@using HotelService.Service
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model IEnumerable<User>

@{
    ViewData["Title"] = "Admin";
    Layout = "/Areas/Admin/_AdminLayout.cshtml";
}
<main class="">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4 class="text-light text-uppercase text-center">Панель администратора</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body py-5">Primary Card</div>
                    <div class="card-footer d-flex">
                        Посетителей: 12
                        <span class="ms-auto">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-dark h-100">
                    <div class="card-body py-5">Warning Card</div>
                    <div class="card-footer d-flex">
                        Заказов за сегодня: 24
                        <span class="ms-auto">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white h-100">
                    <div class="card-body py-5">Success Card</div>
                    <div class="card-footer d-flex">
                        Регистраций: 5
                        <span class="ms-auto">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-danger text-white h-100">
                    <div class="card-body py-5">Danger Card</div>
                    <div class="card-footer d-flex">
                        Отмен заявок: 2
                        <span class="ms-auto">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-header">
                        <span class="me-2"><i class="bi bi-bar-chart-fill"></i></span>
                        Популярное среди "Рестораны и бары"
                    </div>
                    <div class="card-body">
                        <div>
                            <canvas class="chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="text-center text-light">
                    <img class="d-block mx-auto" src="~/img/Home/Data storage_Monochromatic.png" alt="" width="400" height="400">
                </div>
            </div>
        </div>
    </div>
</main>