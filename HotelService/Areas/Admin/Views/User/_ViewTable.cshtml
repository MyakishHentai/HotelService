@model IEnumerable<HotelService.Models.Base.User>


<div class="card">
    <div class="card-header text-center">
        <span><i class="fas fa-server"></i></span> Учетные записи пользователей
    </div>
    <div class="card-body">
        <div class="table-responsive p-1">
            <table id="categories_table"
                   class="table table-striped table-hover table-bordered align-middle data-table"
                   style="width: 100%">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Дата рождения</th>
                        <th>Пол</th>
                        <th>Email</th>
                        <th class="non-orderable">
                            <a onclick="showInPopup('@Url.Action("CreateEdit", "User", null, Context.Request.Scheme)', 'Добавление новой учетной записи')" class="btn btn-success text-white w-100">
                                <i class="fas fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                @if (Model.Any())
                {
                    <tbody class="text-center">
                        @foreach (var Item in Model)
                        {
                        <tr>
                            <td>@Item.FirstName</td>
                            <td>@Item.LastName</td>
                            @if (Item.BirthDate != null)
                            {
                                <td>@(Item.BirthDate)</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            <td>@(Item.Gender??"-")</td>
                            <td>@Item.NormalizedEmail</td>
                            <td>
                                <div class="btn-group">
                                    <a onclick="showInPopup('@Url.Action("CreateEdit", "User", new {id = Item.Id}, Context.Request.Scheme)', 'Обновить @Item.UserName')" class="btn btn-warning">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a onclick="showInPopup('@Url.Action("Details", "User", new {id = Item.Id}, Context.Request.Scheme)', 'Детали @Item.UserName')" class="btn btn-info ">
                                        <i class="fas fa-question"></i>
                                    </a>
                                </div>
                                <a onclick="showInPopup('@Url.Action("Delete", "User", new {id = Item.Id}, Context.Request.Scheme)', 'Удалить @Item.UserName')" class="btn-sm btn-outline-danger ">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>