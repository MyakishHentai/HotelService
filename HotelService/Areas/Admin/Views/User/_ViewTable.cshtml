@model IEnumerable<HotelService.Models.Base.User>


<div class="card">
    <div class="card-header text-center">
        <span><i class="fas fa-server"></i></span> Users Table
    </div>
    <div class="card-body">
        <div class="table-responsive p-1">
            <table id="categories_table"
                   class="table table-striped table-hover table-bordered align-middle data-table"
                   style="width: 100%">
                <thead class="table-dark text-center">
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>BirthDate</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                @if (Model.Any())
                {
                    <tbody class="text-center">
                        @foreach (var Item in Model)
                        {
                        <tr>
                            <td>@Item.FirstName</td>
                            <td>@Item.LastName</td>
                            <td>@Item.BirthDate</td>
                            <td>@Item.Gender</td>
                            <td>@Item.NormalizedEmail</td>
                            <td>
                                <div class="btn-group">
                                    <a onclick="showInPopup('@Url.Action("Details", "User", new {id = Item.Id}, Context.Request.Scheme)', 'Details @Item.NormalizedUserName')" class="btn btn-outline-info ">
                                        <i class="fas fa-question"></i>
                                    </a>
                                    <a onclick="showInPopup('@Url.Action("CreateEdit", "User", new {id = Item.Id}, Context.Request.Scheme)', 'Update @Item.NormalizedUserName')" class="btn btn-outline-warning">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                </div>
                                <a onclick="showInPopup('@Url.Action("Delete", "User", new {id = Item.Id}, Context.Request.Scheme)', 'Delete @Item.NormalizedUserName')" class="btn-sm btn-danger ">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot class="table-dark text-center">
                        <tr>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>BirthDate</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Manage</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>