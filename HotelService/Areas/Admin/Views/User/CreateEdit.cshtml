@model HotelService.Models.ViewModels.Admin.CreateModel
@{
    ViewData["Title"] = "Manage User";
    //Layout = "/Areas/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <form asp-action="CreateEdit" asp-controller="User" asp-route-id="@Model.Id" method="post" onsubmit="return jQueryAjaxPost(this);">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6">
                @* FirstName *@
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fas fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="FirstName" class="form-control"/>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                @* LastName *@
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="far fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="LastName" class="form-control"/>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @*Patronymic*@
                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="far fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="Patronymic" class="form-control"/>
                    </div>
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                @* Passport *@
                <div class="form-group">
                    <label asp-for="Passport" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fas fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="Passport" class="form-control"/>
                    </div>
                    <span asp-validation-for="Passport" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                @* Email *@
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="far fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="Email" class="form-control"/>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                @* Password *@
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fas fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                @* ConfirmPassword *@
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="far fa-bookmark"></i>
                        </span>
                        <input type="text" asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success w-100" onsubmit="return jQueryAjaxPost(this);" />
        </div>
    </form>
</div>
