@model IEnumerable<HotelService.Models.Base.Service>


<div class="card shadow">
    <div class="card-header text-center">
        <span><i class="fas fa-server"></i></span> Услуги @Config.CompanyName
    </div>
    <div class="card-body">
        <div class="table-responsive p-1">
            <table id="services_table"
                   class="table table-striped table-hover table-bordered align-middle data-table"
                   style="width: 100%">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Заголовок</th>
                        <th>Подзаголовок</th>
                        <th>Категория</th>
                        <th>Стоимость</th>
                        <th class="non-orderable" style="width:20vh;">
                            <a onclick="showInPopup('@Url.Action("CreateEditService", "Catalog", null, Context.Request.Scheme)', 'Добавление новой услуги')" class="btn btn-success text-white w-100">
                                <i class="fas fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                @if (Model.Any())
                {
                    <tbody>
                        @foreach (var Item in Model)
                        {
                        <tr>
                            <td class="text-center">@Item.Title</td>
                            <td class="text-center">@Item.Subtitle</td>
                            <td class="text-center">@(Item.ServiceCategory.Title)</td>
                            <td class="text-center">@Item.Cost.ToString("C")</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a onclick="showInPopup('@Url.Action("CreateEditService", "Catalog", new {id = Item.Id}, Context.Request.Scheme)', 'Обновить @Item.Title')" class="btn btn-warning">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a onclick="showInPopup('@Url.Action("DetailsService", "Catalog", new {id = Item.Id}, Context.Request.Scheme)', 'Детали @Item.Title')" class="btn btn-info ">
                                        <i class="fas fa-question"></i>
                                    </a>
                                </div>
                                <a onclick="showInPopup('@Url.Action("DeleteService", "Catalog", new {id = Item.Id}, Context.Request.Scheme)', 'Удалить @Item.Title')" class="btn-sm btn-outline-danger ">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>