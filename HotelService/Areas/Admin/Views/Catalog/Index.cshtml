@using System.Xml.Serialization
@using HotelService.Models.Base
@using HotelService.Models.ViewModels.Admin
@model CatalogModel
@{
    ViewBag.Title = "Services";
    Layout = "/Areas/Admin/_AdminLayout.cshtml";
}



<div class="row g-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-body">
                <div class="row">
                <div class="col-xxl-4 col-md-6 col-sm-12">
                    <div class="input-group">
                        <label class="input-group-text" for="inputGroupSelect01">Способ отображения:</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Полный</option>
                            <option value="1">Услуги</option>
                            <option value="2">Категории</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 align-self-center">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Только недоступные варианты</label>
                    </div>
                </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-primary w-75">Применить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="view-table">
            @await Html.PartialAsync("_ViewServices", Model.Services)
        </div>
    </div>
</div>

    <div class="container col-xxl-8">
        <div class="row flex-lg-row-reverse align-items-center">
            <div class="col-6 col-sm-12 col-lg-6">
                <img src="~/img/Home/card.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="300" height="300" loading="lazy">
            </div>
            <div class="col-6 col-lg-6 col-sm-12">
                <h1 class="display-5 fw-bold lh-1 mb-3">Управление учетными записями</h1>
                <p class="lead">Будьте внимательны при добавлении новых пользователей, не задавайте поле Пароль, если не хотите его изменить.</p>
            </div>
        </div>
    </div>
<div class="row g-4">
    <div class="col-md-12">
        <div class="view-table">
            @await Html.PartialAsync("_ViewCategories", Model.Categories)
        </div>
    </div>
    <div></div>
</div>





