@model HotelService.Models.Base.Service

@{
    ViewData["Title"] = $"{Model.Title}";
    //Layout = "/Areas/Admin/_AdminLayout.cshtml";
}

<div class="container">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />

        <table class="table table-hover table-bordered table-striped align-middle text-center">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Cost</th>
                <th>Added</th>
            </tr>
            <tr>
                <th>@Model.Title</th>
                <th>@Model.ServiceCategory.Title</th>
                <th>@Model.Cost.ToString("C")</th>
                <th>@Model.AddedDate</th>
            </tr>
        </table>

        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger w-100" />
        </form>
    </div>

</div>
