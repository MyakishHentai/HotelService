@model HotelService.Models.Base.Service
@{
    ViewData["Title"] = "Edit Service";
    Layout = "/Areas/Admin/_AdminLayout.cshtml";
}
<form asp-action="Edit" asp-controller="Service" asp-route-id="@Model.CategoryId">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Subtitle" class="control-label">Subtitle</label>
        <input type="text" asp-for="Subtitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Cost</label>
        <input type="number" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>